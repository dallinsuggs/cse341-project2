    "/bucketlist/": {
      "get": {
        "description": "Get all Bucketlist items from the database",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "description": "Post a new entry (bucketlist item) to the database",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "item name"
                },
                "deadline": {
                  "example": "\"2999\""
                },
                "priority": {
                  "example": "\"99\""
                },
                "description": {
                  "example": "a description of the goal"
                },
                "plan": {
                  "example": "a plan to obtain the goal"
                },
                "links": {
                  "example": "reference links (if any)"
                },
                "notes": {
                  "example": "comments or notes (if any)"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/bucketlist/{id}": {
      "get": {
        "description": "Get 1 bucketlist item by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "put": {
        "description": "Put an update to change an existing bucketlist item (reference with ID)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "item name"
                },
                "deadline": {
                  "example": "\"2999\""
                },
                "priority": {
                  "example": "\"99\""
                },
                "description": {
                  "example": "a description of the goal"
                },
                "plan": {
                  "example": "a plan to obtain the goal"
                },
                "links": {
                  "example": "reference links (if any)"
                },
                "notes": {
                  "example": "comments or notes (if any)"
                }
              }
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "delete": {
        "description": "Delete a bucketlist item from the database by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
